   "outputs": [],
   "source": [
    "import random\n",
    "import math"
   ]
  },
  {
   "cell_type": "markdown",
   "metadata": {},
   "source": [
    "## Monte-Carlo Loop "
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "k = 0\n",
    "n = 10000\n",
    "for number in range(n):\n",
    "\n",
    "    r1 = random.random()\n",
    "    r2 = random.random()\n",
    "\n",
    "    r = math.sqrt(r1*r1 + r2*r2)\n",
    "\n",
    "    if r<1:\n",
    "        k = k +1\n",
    "\n",
    "\n",
    "print(k/n)"
   ]
  },
